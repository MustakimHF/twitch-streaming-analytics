# Twitch API (Client Credentials flow)
TWITCH_CLIENT_ID=PUT_YOUR_CLIENT_ID_HERE
TWITCH_CLIENT_SECRET=PUT_YOUR_CLIENT_SECRET_HERE

# Extraction controls
TWITCH_MAX_PAGES=5        # each page up to 100 streams; raise for more data
TWITCH_LANG_FILTER=       # e.g. "en,es,ja" or leave blank for all

# Database (SQLite by default)
DB_URL=sqlite:///db/twitch.db
